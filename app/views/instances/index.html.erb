<p id="notice"><%= notice %></p>

<h1>Instances</h1>

<table class="table">
  <thead>
    <tr>
      <th>Hostname</th>
      <th>Profile</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instances.each do |instance| %>
      <tr>
        <td><%= instance.hostname %></td>
        <td><%= instance.profile_id %></td>
        <td><%= instance.region %></td>
        <td><%= link_to 'Show', instance %></td>
        <td><%= link_to 'Edit', edit_instance_path(instance) %></td>
        <td><%= link_to 'Destroy', instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instance', new_instance_path, class: "btn btn-primary" %>
