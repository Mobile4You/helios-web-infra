<h1><dt>Profiles</dt></h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Key</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.key %></td>
        <td>
          <%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path, class:"btn btn-primary btn-lg" %><br><br><br><br><br><br><br><br><br><br><br><br>
